<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.imperialcreation.userinfo.SplachActivity">

    <com.github.ndczz.infinityloading.InfinityLoading
        android:id="@+id/loading"
        android:layout_centerInParent="true"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        app:infl_backColor="@color/light_gray"
        app:infl_drawBack="true"
        app:infl_reverse="true"
        app:infl_progressColor="@color/dark_green"
        app:infl_strokeWidth="4dp" />

</RelativeLayout>
